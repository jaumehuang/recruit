/* pages/resume_detail/resume_detail.wxss */
page{
  background-color:#F2F2F2;
}
.resume_detail .info{
   padding:24rpx;
   background-color: #ffffff;
   display: flex;
}
.resume_detail .info image{
  height:140rpx;
  width:140rpx;
  border-radius:50%;
}
.resume_detail .main{
  padding-left:20rpx;
}
.resume_detail .main .item:first-child text{
  padding-right:40rpx;
}
.resume_detail .main .item:last-child{
  margin-top:50rpx;
}
 .bottom-list{
   background-color: #ffffff;
   padding:24rpx;
 }
 .bottom-list .bottom-li{
  margin-right:32rpx;
  position: relative;
}
 .bottom-list .bottom-li::after{
  display:block;
  position:absolute;
  top:8rpx;
  content: "";
  left:-18rpx;
  height:24rpx;
  width:1rpx;
  background-color:#999999;
}
 .bottom-list .bottom-li:first-child::after{
  background-color:#ffffff;
}
.need-list{
  padding:24rpx;
  padding-top:0;
  background-color: #ffffff;
}
.mian-work{
  background-color: #ffffff;
  margin-top:20rpx;
}
.mian-work .title{
  padding:24rpx;
}
.mian-work .item{
  padding:24rpx;
}
.mian-work .name{
  padding:0 24rpx;
}
.mian-work .main-t{
  padding:24rpx;
}