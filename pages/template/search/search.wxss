.top{
  background-color: #F04844;
  color:#ffffff;
  text-align: center;
  padding:24rpx 0;
  position: fixed;
  left:0;
  width:100%;
}
.location text{
  text-align: center;
  line-height: 60rpx;
  position: relative;
}
.location text:before{
display: block;
content: "";
 height:72rpx;
 width:72rpx;
 background: url("data:image/png;base64,") no-repeat center;
 background-size:100% 100%;
 position: absolute;
  left:-60rpx;
  top:-15rpx;
}
.search-input{
  margin-left:24rpx;
  margin-top:24rpx;
  margin-right:24rpx;
  height:90rpx;
  line-height:90rpx;
}
.search-input .search{
  height: 100%;
  background-color: #ffffff;
  border-radius: 60rpx;
}